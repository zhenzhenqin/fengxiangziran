<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fengxiang.mapper.OrderDetailMapper">
    <!--查询销量前10-->
    <select id="getSalesTop10" resultType="com.fengxiang.entity.OrderDetail">
        select od.name as name, sum(od.number) as number
        from order_detail od, orders o
        <where>
            od.order_id = o.id
            <if test="beginTime != null">
                and o.order_time &gt;= #{beginTime}
            </if>
            <if test="endTime != null">
                and o.order_time &lt;= #{endTime}
            </if>
        </where>
        group by od.name
        order by sum(od.number) desc
        limit 10
    </select>
</mapper>
